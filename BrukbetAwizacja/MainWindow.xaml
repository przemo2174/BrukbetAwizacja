        <CheckBox x:Name="checkboxGreen" Content="Bieżąca Awizacja" IsChecked="True" Foreground="DarkGreen" HorizontalAlignment="Left" Margin="48,140,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkboxRed" Content="Oczekująca Awizacja" IsChecked="True" Foreground="Red" HorizontalAlignment="Left" Margin="48,174,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="146" Margin="295,43,0,0" VerticalAlignment="Top" Width="387"/>

    </Grid>
</Window>
